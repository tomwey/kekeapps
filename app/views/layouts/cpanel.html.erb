<!DOCTYPE html>
<html>
<head>
  <title>可可法律类软件后台管理系统</title>
  <%= stylesheet_link_tag    "cpanel" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to("可可", cpanel_root_path, :class => "brand")%>
				<ul class="nav">
					<li><%= link_to "首页", cpanel_root_path %></li>
					<li><%= link_to "应用程序", cpanel_app_infos_path %></li>
					<li><%= link_to "法律数据", cpanel_law_details_path %></li>
					<li><%= link_to "用户反馈", cpanel_feedbacks_path %></li>
					<li><%= link_to "新闻", cpanel_news_blasts_path %></li>
					<li><%= link_to "Api Key", cpanel_latest_api_key_path %></li>
				</ul>
				
        <ul class="nav  pull-right">
          <li class="dropdown" id="user_menu">
            <a href="#user_menu" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class='caret'></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "修改密码", edit_user_registration_path %></li>
							<li><%= link_to "退出", destroy_user_session_path, :method => :delete, confirm: "确认要退出吗？" %></li>
            </ul>
          </li>
        </ul>

      </div>
    </div>
  </div>
	<div class="container">
		<% flash.each do |key,msg| %>
			<div class="alert alert-<%= key%>">
				<a class="close" href="#" data-dismiss="alert">&times;</a><%= msg %>
			</div>
		<% end %>
		<%= yield %>
	</div>
	<%= render 'layouts/footer' %>

	<%= javascript_include_tag "application" %>
	
</body>
</html>
