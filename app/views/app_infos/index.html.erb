<div class="main">
	<ul class="apps-list">
		<% @app_infos.each do |app_info| %>
			<li>
				<%= image_tag app_info.image_url(:thumb) if app_info.image? %>
				<p><strong><%= link_to app_info.title, app_info %></strong><br><em><%= app_info.description %></em></p>
			</li>
		<% end %>
	</ul>
</div>
<%= link_to 'New App info', new_app_info_path %>
