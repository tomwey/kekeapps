<h2>应用列表</h2>
<div class="row">
	<div class="span12">
		<table class="table table-hover">
			<thead>
				<tr>
		      <th>Icon</th>
		      <th>App Name</th>
		      <th>App Intro</th>
		      <th>App Store URL</th>
					<th>Created at</th>
					<th></th>
	      </tr>
			</thead>
			<tbody>
				<% @app_infos.each do |app_info| %>
				<tr>
					<td><%= image_tag app_info.image_url(:thumb) if app_info.image? %></td>
					<td width="10%"><%= app_info.title %></td>
					<td width="20%"><%= app_info.description %></td>
					<td><%= link_to app_info.app_url, app_info.app_url %></td>
					<td width="20%"><%= app_info.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
					<td>
						<%= link_to '编辑', [:cpanel, app_info], class: 'btn btn-primary' %>
						<%= link_to '删除', [:cpanel, app_info], method: :delete, confirm: '确定要删除吗？', class: 'btn btn-danger' %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
