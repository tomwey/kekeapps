<div class="row">
	<div class="span8">
		<h4>Recent News Blasts</h4>
		<ul>
			<% @recent_news_blasts.each do |news_blast| %>
				<li>
					<p><%= link_to news_blast.title, cpanel_news_blast_path(news_blast) %></p>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="span4">
		<h4>Recent Newsblasts</h4>
		<dl>
			<% @recent_app_infos.each do |app_info| %>
				<dt><%= image_tag app_info.image_url(:thumb)%></dt>
				<dd><h5><%= app_info.title %></h5></dd>
				<dd><p><%= app_info.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p></dd>
			<% end %>
		</dl>
	</div>
</div>

