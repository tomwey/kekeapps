<h3 class="head-pager">最新上线</h3>
<ul class="unstyled">
	<% @recent_app_infos.each do |app_info| %>
		<li class="span3">
			<%= image_tag app_info.image_url(:thumb), class:"pull-left" %>
			<div class="caption">
				<h5><%= app_info.title %></h5>
				<p><%= app_info.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
			</div>
		</li>
	<% end %>
</ul>